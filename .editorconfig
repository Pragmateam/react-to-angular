# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{md,mdx}]
prose_wrap = always
wrap_paragraphs = true
trim_trailing_whitespace = false

[*.{sass,scss,css}]
prose_wrap = always

[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4
indent_style = space
